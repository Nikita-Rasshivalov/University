@model IEnumerable<PerformerViewModel>
<div class="all-container">
    <div class="info-container">
        <div class="container-item">
            <h1>Performers</h1>
        </div>
        <div class="container-item">
            @if (@Model?.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Group name</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var performer in @Model)
                        {
                        <tr>
                            <td>@performer.Id </td>
                            <td>@performer.Name</td>
                            <td>@performer.Surname</td>
                            <td>@performer.GroupName</td>

                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>There are no performers </h3>
            }
        </div>
    </div>
</div>

