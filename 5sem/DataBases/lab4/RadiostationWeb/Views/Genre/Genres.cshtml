@model IEnumerable<Genre>
    <div class="all-container">
        <div class="info-container">
            <div class="container-item">
                <h1>Genres</h1>
            </div>
            <div class="container-item">
                @if (@Model?.Count() > 0)
                {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>GenreName</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var genre in @Model)
                        {
                        <tr>
                            <td>@genre.Id </td>
                            <td>@genre.GenreName</td>
                            <td>@genre.Description</td>
                        </tr>
                        }
                    </tbody>
                </table>
                }
                else
                {
                <h3>There are no genres </h3>
                }
            </div>
        </div>
    </div>

