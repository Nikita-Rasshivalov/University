@model IEnumerable<IdentityUser>
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> UserManager
<link href="~/css/site.css" rel="stylesheet">
<div class="all-container">
    <div class="container">
        <div class="container-item">
            <h1>Users management</h1>
        </div>
        <div class="container-item">
            <a asp-controller="Account" asp-action="Create" class="crud-button">Create</a>
        </div>
        <div class="container-item">
            @if (@Model?.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Roles</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var user in @Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    <div class="role-button-container">
                                        @if (await UserManager.IsInRoleAsync(user, "Admin"))
                                        {
                                            <a class="role-button" asp-controller="Account" asp-action="DeleteRole" asp-route-userId="@user.Id" asp-route-roleName="Admin">Delete Admin</a>
                                        }
                                        else
                                        {
                                            <a class="role-button not-exist-role" asp-controller="Account" asp-action="AddRole" asp-route-userId="@user.Id" asp-route-roleName="Admin">Add Admin</a>
                                        }
                                        @if (await UserManager.IsInRoleAsync(user, "User"))
                                        {
                                            <a class="role-button" asp-controller="Account" asp-action="DeleteRole" asp-route-userId="@user.Id" asp-route-roleName="User">Delete User</a>
                                        }
                                        else
                                        {
                                            <a class="role-button not-exist-role" asp-controller="Account" asp-action="AddRole" asp-route-userId="@user.Id" asp-route-roleName="User">Add User</a>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <a class="crud-button" asp-controller="Account" asp-action="Delete" asp-route-userId="@user.Id">Delete</a>
                                </td>
                                <td>
                                    <a class="crud-button" asp-controller="Account" asp-action="Edit" asp-route-userId="@user.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>There are no users</h3>
            }
        </div>
    </div>
</div>
