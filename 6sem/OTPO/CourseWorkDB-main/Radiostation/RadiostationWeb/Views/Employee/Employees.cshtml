@model PageItemsModel<EmployeeViewModel>
@inject RadiostationWeb.Data.RadiostationWebDbContext context

@addTagHelper *, RadiostationWeb
@{
    ViewData["Title"] = "Employees";
    var employeesSumWorkTime = context.Employees.Sum(o => o.WorkTime);
}
<div class="main-container">
    <h2 class="title">Employees work time a week: @employeesSumWorkTime</h2>
    <div class="container-item">
        @if (@Model?.Items.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Middle Name</th>
                        <th>Education</th>
                        <th>Position</th>
                        <th>Work Time(hours a day)</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var empl in @Model.Items)
                    {
                        <tr>
                            <td>@empl.Username</td>
                            <td>@empl.Email</td>
                            <td>@empl.Name</td>
                            <td>@empl.Surname</td>
                            <td>@empl.MiddleName</td>
                            <td>@empl.Education</td>
                            <td>@empl.PositionName</td>
                            <td>@empl.WorkTime</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="pages-container"><page-link page-model="Model.PageModel" page-action="Employees"></page-link></div>
        }
        else
        {
            <h3>There are no employees </h3>
        }
    </div>
</div>

