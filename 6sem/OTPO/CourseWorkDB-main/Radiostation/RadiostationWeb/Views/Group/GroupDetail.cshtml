@model GroupItemsViewModel
@addTagHelper *, RadiostationWeb

<div class="main-container">
    <div class="container-item">
        <h2 class="title">Group name: @Model.GroupName</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Performer name</th>
                    <th>Performer surname</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var group in @Model.GroupsItems)
                {
                    <tr>
                        <td>@group.PerformerName</td>
                        <td>@group.PerformerSurname</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pages-container"><page-link page-model="Model.PageModel" model-id="@Model.Id"   page-action="GroupDetail"></page-link></div>
    </div>
</div>

